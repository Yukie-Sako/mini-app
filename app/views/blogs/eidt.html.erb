<div class="contens row">
 <%= form_for @blog do |f| %>
   <h3>編集する</h3>
    <div style="margin: 8px 0">
      <%= f.text_field :title, @blog.title, style: 'width: 700px; height: 100px;' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_area :text, @blog.text, style: 'width: 700px; height: 300px;' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_field :text, @blog.image, style: 'width: 700px; height: 50px;' %>
    </div>
    <div class="row">
      <div class="col10 push1">
        <%= button_tag type: "submit", class: "btn btn--block" do %>
        投稿する<i class="icon-arrow-right"></i>
        <% end %>
      </div>
    </div>
   <% end %>
</div>


