<div class="form-body">
 <%= form_for @blog do |f| %>
    <div style="margin: 8px 0">
      <%= f.text_field :title, placeholder: 'タイトル', style: 'width: 700px; height: 100px;' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_area :text, placeholder: '本文', style: 'width: 700px; height: 300px;' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_field :image, placeholder: 'Image URL', style: 'width: 700px; height: 50px;' %>
    </div>
    <div class="row">
      <div class="col10 push1">
        <%= button_tag type: "submit", class: "btn btn--block" do %>
        投稿する<i class="icon-arrow-right"></i>
        <% end %>
      </div>
    </div>
   <% end %>
</div>
